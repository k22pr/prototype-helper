{
  "name": "prototype-helper",
  "version": "0.1.6",
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k22pr/prototype-helper.git"
  },
  "keywords": [
    "typescript",
    "prototype",
    "extension",
    "override",
    "helper"
  ],
  "author": "서버지기",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/k22pr/prototype-helper/issues"
  },
  "homepage": "https://github.com/k22pr/prototype-helper#readme",
  "dependencies": {
    "consola": "^2.15.3",
    "decimal.js": "^10.3.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.6.0",
    "dotenv": "^10.0.0",
    "jest": "^27.0.4",
    "nodemon": "^1.19.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^6.0.4",
    "ts-node": "^10.0.0",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "build": "jest && tsc",
    "dev": "nodemon --exec ts-node ./src/test.ts",
    "test": "jest --detectOpenHandles --forceExit",
    "publish": "jest && tsc && npm publish"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components",
      "src"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
